<html>
<head>
	<title>Manage Parking</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
     <link href="/stylesheets/style.css" rel="stylesheet">
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="parking">
	<!-- footer -->
	<script type="text/ng-template" id="/footer.html">
		<footer class="footer">
	      <div class="container">
	        <p class="text-muted">{{title}} - {{copyright}}</p>
	      </div>
	    </footer>
	</script>

	<!-- navigation bar -->
	<nav class="navbar navbar-default" ng-controller="NavCtrl">
	    <ul class="nav navbar-nav">
	      <li over="alert-warning" out><a href="/#/home">Home</a></li>
	      <li over="alert-warning" out ng-show="isLoggedIn()" ><a href="" ng-click="logOut()">Log Out</a></li>
	      <li currentuser="alert-info" over="alert-warning" out ng-show="isLoggedIn()"><a href="/#/profile"> Welcome {{ currentUser() }}</a></li>
	      <li over="alert-warning" out ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
	      <li over="alert-warning" out ng-hide="isLoggedIn()" ><a href="/#/register">Register</a></li>
	    </ul>
	</nav>
	<!-- profile page -->
	<script type="text/ng-template" id="/profiles.html">
	  <div ng-show="isLoggedIn()">
		  <div class="page-header">
		    <h1>{{currentUser()}} Profile page</h1>
		  </div>

	 	<div class="form-group">
	      <input type="text"
	      class="form-control"
	      placeholder="Username"
	      ng-model="user.username"></input>
	    </div>
	    <div class="form-group">
	      <input type="password"
	      class="form-control"
	      placeholder="Password"
	      ng-model="user.password"></input>
	    </div>

    	<div class="form-group">
	      <input type="email"
	      class="form-control"
	      placeholder="Email"
	      ng-model="user.email"></input>
	    </div>
	    <div class="form-group">
	      <input type="mobile"
	      class="form-control"
	      placeholder="Mobile"
	      ng-model="user.mobile"></input>
	    </div>

	  </div>
	</script>
	<!-- login page -->
	<script type="text/ng-template" id="/login.html">
	  <div class="page-header">
	    <h1>Your Parking</h1>
	  </div>

	  <div ng-show="error" class="alert alert-danger row">
	    <span>{{ error.message }}</span>
	  </div>

	  <form ng-submit="logIn()"
	    style="margin-top:30px;">
	    <h3>Log In</h3>

	    <div class="form-group">
	      <input type="text"
	      class="form-control"
	      placeholder="Username"
	      ng-model="user.username"></input>
	    </div>
	    <div class="form-group">
	      <input type="password"
	      class="form-control"
	      placeholder="Password"
	      ng-model="user.password"></input>
	    </div>
	    <button type="submit" class="btn btn-primary">Log In</button>
	  </form>
	  </script>
	<!-- register page -->
	<script type="text/ng-template" id="/register.html">
	  <div class="page-header">
	    <h1>Your Parking</h1>
	  </div>

	  <div ng-show="error" class="alert alert-danger row">
	    <span>{{ error.message }}</span>
	  </div>

	  <form ng-submit="register()"
	    style="margin-top:30px;">
	    <h3>Register</h3>

	    <div class="form-group">
	      <input type="text"
	      class="form-control"
	      placeholder="Username"
	      ng-model="user.username"></input>
	    </div>
	    <div class="form-group">
	      <input type="password"
	      class="form-control"
	      placeholder="Password"
	      ng-model="user.password"></input>
	    </div>

    	<div class="form-group">
	      <input type="email"
	      class="form-control"
	      placeholder="Email"
	      ng-model="user.email"></input>
	    </div>
	    <div class="form-group">
	      <input type="mobile"
	      class="form-control"
	      placeholder="Mobile"
	      ng-model="user.mobile"></input>
	    </div>

	    <button type="submit" class="btn btn-primary">Register</button>
	  </form>
	</script>
	
	<!-- home template -->
	<script type="text/ng-template" id="/home.html">
	 <div class="page-header">
        <h1>Your parking</h1>
      </div>
   
    <div ng-hide="isLoggedIn()">
	  <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you continue.</h3>
	</div>


    <div class="form-group" ng-show="isLoggedIn()">
      <input type="text"
        class="form-control"
        placeholder="search your vechile"
        ng-model="search.$"></input>
    </div>
     <div ng-repeat="vechile in vechiles | filter:search | orderBy:'model_name'" ng-show="isLoggedIn()" >
    	<span class="glyphicon glyphicon-asterisk"></span>
      	{{vechile.model_name}} - <a href="/vechiles/{{vechile._id}}">{{vechile.plate_no}}</a>
  	</div>

    <form ng-submit="addVechile()"
        style="margin-top:30px;"   ng-show="isLoggedIn()">
        <h3>Add a new vechile</h3>

        <div class="form-group">
          <input type="text"
            class="form-control"
            placeholder="Model name"
            ng-model="model_name"></input>
        </div>
        <div class="form-group">
          <input type="text"
          class="form-control"
          placeholder="Plate number"
          ng-model="plate_no"></input>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form> 
  	</script>	
	<div class="row">
	    <div class="col-md-6 col-md-offset-3">
	     	<ui-view></ui-view>	
	    </div>
  	</div>
 


  	<parkingfooter title="your parking" copyright="@rauniyar" ></parkingfooter>

  	<!-- js includes -->
  	<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    
     <!-- directives  -->
     <script src="/javascripts/directives/common.js"></script>

    <!-- controllers -->
    <script src="/javascripts/controllers/NavCtrl.js"></script>
    <script src="/javascripts/controllers/ProfileCtrl.js"></script>
    <script src="/javascripts/controllers/MainCtrl.js"></script>
    <script src="/javascripts/controllers/AuthCtrl.js"></script>
     <!-- factories -->
    <script src="/javascripts/factories.js"></script>
    <script src="/javascripts/services/profile.js"></script>
    <script src="/javascripts/services/vechiles.js"></script>
    <script src="/javascripts/services/auth.js"></script>


  		        
</body>
</html>